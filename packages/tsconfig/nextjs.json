{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    
    "allowJs": true,
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "plugins": [{ "name": "next" }],
    
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext" 
  }
}
